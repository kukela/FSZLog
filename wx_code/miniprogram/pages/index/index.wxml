<view class="page">
  <view class="header_box">
    <view class="num_box">
      <text class="num">预算:3000</text>
      <text class="num big">剩余:1000</text>
    </view>
    <view class="all_bar">
      <view class="h_bar"></view>
    </view>
  </view>
  <scroll-view class="list" data-weui-theme="{{theme}}" scroll-y type="list">
    <view class="cell">
      <view class="main bb" hover-class="def_hover" hover-stay-time="150">
        <text class="title">ABC</text>
        <text class="num big">-1000</text>
      </view>
      <view class="sub bb" hover-class="def_hover" hover-stay-time="150">
        <text class="title">2024-01-01</text>
        <text class="num big">-100</text>
      </view>
      <view class="sub" hover-class="def_hover" hover-stay-time="150">
        <text class="title">2024-01-01</text>
        <text class="num big">-100</text>
      </view>
    </view>
    <view class="cell">
      <view class="main" hover-class="def_hover" hover-stay-time="150">
        <text class="title">ABC</text>
        <text class="num big">-1000</text>
      </view>
    </view>
    <view class="space_b"></view>
  </scroll-view>
  <button class="add_btn" plain="true" hover-class="def_hover" bindtap="addTap">
    <image src='/image/btn_add.png'></image>
  </button>

  <modal-view class="add_modal" show="{{showModal}}" title="添加">
    <view class="model_cell">
      <input maxlength="20" placeholder="请输入标题" />
    </view>
    <scroll-view class="model_cell" type="custom" scroll-y="true">
      <view class="item_box">
        <view class="item" hover-class="def_hover">ABC</view>
        <view class="item">这是一段很长的测试数据</view>
        <view class="item">这是数据</view>
        <view class="item">这是一段很长的测试数据</view>
        <view class="item">ABC</view>
        <view class="item">这是测试数据</view>
        <view class="item">这是一段很长的测试数据</view>
      </view>
    </scroll-view>
    <view class="model_cell">
      <radio-group>
        <label class="sr">
          <radio value="sr" />
          <text>收入</text>
        </label>
        <label class="zc">
          <radio value="zc" checked="true" />
          <text>支出</text>
        </label>
      </radio-group>

      <input type="digit" placeholder="请输入价格" />
    </view>
  </modal-view>

</view>